<div id="vinyl_loop">
	<%= image_tag("vinyl_loop.png")%>
</div>

<div id="home_page_forms">
<!--New Prospect Form-->
<div id="prospect_form">
  <div id="inner_prospect">
	<h2>The Coolest New Vinyl</h2>
	<h2>Delivered Monthly</h2>
	<h4>Enter your email to receive an invite code</h4>
<%= form_for("prospect", :url => prospects_path, method: :post) do |f| %>
  <%= f.text_field :email %>
  <%= f.submit 'Submit' %>
<% end %>
<br></br>
<%= link_to "Invite Code? Sign Up", new_user_registration_path %>
</div>
</div>



<div id="sign_in_form">
<div id="inner_sign_in">
<h2>Sign In</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><br />
  <%= f.email_field :email %></div>

  <div><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>
</div>
</div>
</div>